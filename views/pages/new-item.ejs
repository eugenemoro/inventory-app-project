<%- include('../partials/head', {title}) %>
<body>
  <h1><%= title %></h1>
  <form action='/items/new' method="POST">
    <div>
      <label for="title">Title: </label>
      <input type="text" name="title" id="title" required>
    </div>
    <div>
      <label for="description">Description: </label>
      <textarea name="description" id="description"></textarea>
    </div>
    <div>
      <label for="price">Price: </label>
      <input type="tel" name="price" id="price" required>
    </div>
    <div>
      <label for="categories">Categories: </label>
      <ul name="categories" id="categories" style="list-style: none;">
        <% categories.map((category) => { %>
          <li>
            <input type="checkbox" name="<%= category.title %>" id="<%= category.title %>">
            <label for="<%= category.title %>"><%= category.title %></label>
          </li>
        <% }) %>  
      </ul>
    </div>
    <button type="submit">Save</button>
  </form>
  <a href="/items"><button>Cancel</button></a>
</body>
<%- include('../partials/footer') %>